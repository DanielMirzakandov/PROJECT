@model MVC5_proj.ModelView.UserViewModel



@{
    ViewBag.Title = "ShowSignIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="font-size:4vw;">Sign In</h2>

<form id="login" action="/User/SignIn" method="post">
    <div class="row">
        <div class="col-xs-3">
            <fieldset>
                <div class="form-group">
                    <div class="input-group">
                        <input type="number" id="ID" name="ID" class="form-control input-lg" placeholder="Enter ID" required>
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <input type="password" id="password" name="Password" class="form-control input-lg" placeholder="Enter Password" required>
                        <span class="passwordIcon input-group-addon"><i class="fa fa-lock"></i></span>
                    </div>
                </div>

            </fieldset>
            <div class="form-group">
                <button type="submit" class="btn btn-success">
                    Sign in
                </button>
            </div>
            <span class="label label-danger">@TempData["noSignIn"]</span>
        </div>
    </div>
</form>

